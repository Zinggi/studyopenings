{
  "compilerOptions": {
    // Compile unmigrated JavaScript files.
    "allowJs": true,
    "lib": ["dom", "es6"],
    "noUnusedLocals": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "typeRoots": ["node_modules/@types", "tstypes"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/client/js/lib/**/*",
    "**/*.test.ts",
  ]
}